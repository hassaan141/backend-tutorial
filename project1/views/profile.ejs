<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BuzzShare - Social Media</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white">
  <!-- Navigation Bar -->
  <div class="bg-zinc-800 sticky top-0 z-10">
    <div class="max-w-7xl mx-auto px-4 py-3 flex justify-between items-center">
      <div class="flex items-center space-x-4">
        <a href="/" class="text-white font-bold text-lg">BuzzShare</a>
        <a href="/explore" class="text-zinc-400 hover:text-white transition-colors">Explore</a>
        <a href="/notifications" class="text-zinc-400 hover:text-white transition-colors">Notifications</a>
      </div>
      <a href="/logout" class="px-5 py-2 bg-red-500 rounded-lg">Logout</a>
    </div>
  </div>

  

  <div class="flex space-between gap-3">
    <!-- Main Content Area -->
  <div class="flex justify-center pt-16 border-2 w-1/3">
    <div class="w-full max-w-2xl mx-auto p-4 space-y-6">
      <div>
        <h2 class="text-3xl"><span class="font-light">Hello,</span> <%= user.name %> ðŸ‘‹</h2>
        <h5 class="mt-4 mb-2 text-lg text-blue-400">Create a post</h5>
        <form action="/post" method="post" class="space-y-2">
          <textarea placeholder="What's on your mind?" class="w-full p-3 bg-zinc-800 border border-zinc-700 rounded-md" name="content"></textarea>
          <input type="submit" value="Create New Post" class="py-2 px-4 bg-blue-500 rounded-md hover:bg-blue-600 cursor-pointer">
        </form>
      </div>
      <div class="posts mt-10">
        <h3 class="text-xl text-zinc-400 mb-3">Your Posts:</h3>
        <div class="space-y-4">
          <% user.posts.reverse().forEach((post) => { %>
            <div class="bg-zinc-800 p-4 rounded-md border border-zinc-700">
              <h4 class="text-blue-500 mb-2">@<%= user.username %></h4>
              <p class="text-sm tracking-tight"><%= post.content %></p>
              <div class="flex justify-between items-center mt-3">
                <small><%= post.likes.length %> Likes</small>
                <div class="flex space-x-2">
                  <a class="text-blue-500" href="/like/<%= post._id %>">
                    <%= post.likes.indexOf(user._id) ? "â¤" : "ðŸ’”" %>
                  </a>
                  <a class="text-blue-500" href="/edit/<%= post._id %>">Edit</a>
                </div>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    </div>
  </div>


  </div>


</body>
</html>

